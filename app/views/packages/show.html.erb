<h5 class="title">
    <%= @package.name %>
    <small>
        <%= @package.version %>
    </small>
</h5>
<p>
    <%= @package.platform.name %> <%= @package.platform.codename %> <%= @package.platform.version %>
</p>

<p class="info"><%= notice %></p>

<code>
    <%= @package.install %>
</code>
<p></p>

<% if owner(@package) %>
  <%= link_to 'edit', edit_package_path(@package) %> |
  <%= link_to 'back', packages_path %>
<% end %>
